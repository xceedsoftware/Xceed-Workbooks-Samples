<Window x:Class="Xceed.Wpf.Workbooks.Sample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Xceed.Wpf.Workbooks.Sample"
        mc:Ignorable="d"
        Title="Xceed Workbooks.NET Sample"
        Background="#101010"
        FontWeight="Bold"
        Foreground="White"
        Icon="/logox.ico"
        Height="250"
        Width="600">
  <StackPanel HorizontalAlignment="Center">
    <TextBlock Text="Select a button to export data to check how Xceed.Workbooks.NET works!!!"
               Margin="10"
               FontSize="16" />
    <Button Name="GenerateWorkbookButton"
            Background="#FE671A"
            Foreground="White"
            Click="GenerateWorkbookButton_Click"
            Content="Simple Workbook"
            Width="200"
            Height="50"
            Margin="10" />
    <Button Name="GenerateStyleWorkbookButton"
            Background="#FE671A"
            Foreground="White"
            Margin="10"
            Click="GenerateWorkbookStyleButton_Click"
            Content="Styled Workbook"
            Width="200"
            Height="50" />
  </StackPanel>
</Window>
